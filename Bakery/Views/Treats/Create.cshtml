@{
  Layout ="_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = true })

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new { @required = true })
  
  <input type="submit" value="Add new Treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>